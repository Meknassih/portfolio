	import Layout from '../layouts/Layout.astro';
	import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1 class="mb-0 font-bold tracking-wide transition-all duration-500 hover:text-transparent bg-clip-text bg-gradient-to-br from-sky-600 to-teal-600">Hamza El Meknassi</h1>
		<h3 class="mt-2 uppercase text-sky-500">Portfolio</h3>
